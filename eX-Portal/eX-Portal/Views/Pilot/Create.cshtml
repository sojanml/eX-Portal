    <input type="hidden" name="AWSAccessKeyId" value="@ViewBag.AWSAccessKey" />
    <input type="hidden" name="acl" value="@ViewBag.Acl" />
    <input type="hidden" name="policy" value="@ViewBag.Base64EncodedPolicy" />
