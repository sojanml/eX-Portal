}

ul#line-legend li {
margin: 0px;
padding: 0px;
width: 18%;
display: inline-block;
}

ul#line-legend li span.legend {
  display: inline-block;
  width: 25px;
  height: 25px;
  text-align: center;
  line-height: 25px;
}

ul#line-legend li span.legend span{  
  font-size:10px;
  color: white;
  visibility:hidden;
}
ul#line-legend li.active span.legend span {
   visibility:visible;
}
