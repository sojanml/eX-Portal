@using eX_Portal.exLogic;
@{
  String ControllerName = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
  String ActionName = HttpContext.Current.Request.RequestContext.RouteData.Values["Action"].ToString();
}
<ul>
  <li><a href="@Url.Action("Index", "Home")" class="disabled">Dashboard</a></li>
  @switch (ControllerName) {
    case "DroneCheckList":

      var DroneID = Request["DroneID"] != null ? Request["DroneID"].ToString() : "";
      var FlightID = Request["FlightID"] != null ? Request["FlightID"].ToString() : "";
      if (DroneID != "") {
        <li><a href="@Url.Action("Index", "Drone")" class="disabled">Drone</a></li>
        <li><a href="@Url.Action("Detail", "Drone", new { ID = DroneID })" class="disabled">Details</a></li>
      }
      if (FlightID != "") {
        <li><a href="@Url.Action("Index", "DroneFlight")" class="disabled">Drone Flight</a></li>
        <li><a href="@Url.Action("Detail", "DroneFlight", new { ID = FlightID })" class="disabled">Details</a></li>
      }
      break;
    default:
      if (ActionName != "Index") {
      <li><a href="@Url.Action("Index", ControllerName)" class="disabled">@Util.toCaption(ControllerName)</a></li>
    }
    break;
  }
  <li>@ViewBag.Title</li>
</ul>
@section Scripts { 
    <style>
        .disabled {
        pointer-events: none;
        cursor: default;
        opacity: 0.6;
    }
    </style>

    }