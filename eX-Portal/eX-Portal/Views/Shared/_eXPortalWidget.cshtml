
@{
  Layout = null;
}

<!DOCTYPE html>

<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewBag.Title - Exponent</title>
  @Scripts.Render("~/bundles/jquery")
  @Styles.Render("~/bundles/eXPortalWidget")
  @RenderSection("header", required: false)  
  <title>_eXPortalWidget</title>
</head>
<body>
  <section>
    <header>
      <div class="clearfix newsection">
        <div class="logo"><img src="~/images/rta-logo.png" /></div>
        <nav class="main-menu">
          @Html.Action("SystemMenu", "Design")
        </nav>
      </div>

      <div class="clearfix newsection">
        <nav class="user-management">
          <ul>
            @if (Session["UserID"] == null) {
              <li>@Html.ActionLink("Log in", "Index", "User")</li>
            } else {
              <li>Welcome <b>@Session["FirstName"]</b></li>
              <li id="user-menu">
                <a href="#" id="user-menu-link"><span class="icon">&#xf013;</span> Account Settings</a>
                <ul id="user-menu-items">
                  <li>@Html.ActionLink("Log Out", "Logout", "User")</li>
                  <li>@Html.ActionLink("Change Password", "ResetPassword", "User")</li>
                </ul>
              </li>
            }
          </ul>
        </nav>


        <nav class="breadcrumbs">
          @Html.Partial("_BreadCrumbs")
        </nav>
        <h1 class="page-title">@ViewBag.Title</h1>

      </div>
    </header>
  </section>

  <section class="@ViewBag.BaseClass">
    @RenderBody()
  </section>
  @RenderSection("scripts", required: false)
</body>
</html>
