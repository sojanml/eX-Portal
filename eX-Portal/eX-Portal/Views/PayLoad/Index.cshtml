@{
  Layout = "~/Views/Shared/_ADSB.cshtml";
}

<section class="top-space">
  <div class="column column-half">
    <div id="PayloadRuns">
      <div class="title">Inventory Summary</div>
      <ul id="PayloadRunIDs">
        <li>
          <div class="c1">ID</div>
          <div class="c2">Items</div>
          <div class="c3">Grid</div>
          <div class="c4">Date</div>          
        </li>

      </ul>
    </div>
    <div id="PayloadRFIDs">
      <div class="title">RFIDs</div>
      <ul id="RFIDs"></ul>
    </div>
    <div id="RSSIs">
      <form>
        <input type="checkbox" name="chkRawGPS" id="chkRawGPS" /> <label for="chkRawGPS">Show RAW GPS Data</label>
        <input style="margin-left:30px;" type="checkbox" name="chkRawRFIDGPS" id="chkRawRFIDGPS" /> <label for="chkRawRFIDGPS">Show RAW GPS for RFID</label>
        <ul style="display:none" id="RSSI"></ul>
      </form>
    </div>
  </div>
  <div id="adsb_map" class="column column-half shaded"></div>
</section>

  <p>&nbsp;</p>
  @section scripts {
    <script type="text/javascript" src="//maps.google.com/maps/api/js?key=AIzaSyDY6IHXH4-fUAzYq6HBR_ndu_lnyyopcTs"></script>
    <script src="~/Scripts/ADSB-Map.js" type="text/javascript"></script>
    <script src="~/Scripts/AgricultureCommon.js" type="text/javascript"></script>
    <script src="~/Scripts/Payload-RFID.js" type="text/javascript"></script>
  }

  @section header {
    <link href="/Content/Payload-RFID.css" rel="stylesheet" />
    <style type="text/css">
      div.rfid-item {
        position:absolute;
        color:white;
        width:50px;
        text-align:center;
        text-transform:none !important
      }
        div.rfid-item.First {
          color:greenyellow;
        }
        div.rfid-item.Last {
          color: coral;
        }
        div.rfid-item:hover ul,
        div.rfid-item-box:hover ul{
          display: block;
        }
      div.rfid-item-box:hover div.dot {
        background-color:rgb(255, 216, 0);
      } 
      div.rfid-item ul {
        left: 50px;
      }
      div.rfid-item-box ul {
        left: 15px;

      } 
      
      div.rfid-item ul,
      div.rfid-item-box ul {
        border: 1px silver solid;
        margin: 0px;
        padding: 5px;
        list-style: none;
        display: none;
        position: absolute;
        background-color: rgba(0, 0, 0, 0.66);
      }
        div.rfid-item ul li,
        div.rfid-item-box ul li{
          margin: 0px;
          padding: 0px;
          list-style: none;
          white-space: nowrap;
        }

      div.rfid-item-box {
        width: 10px;
        height: 10px;
        position: absolute;
        color: white;
        text-transform: none !important
      }

      div.rfid-item-box div.dot {
        width:10px;
        height:10px;
        position:relative;
        top:0px;
        left:0px;
        border-radius:50%;
        background-color:rgba(182, 0, 0, 0.71);
        cursor:pointer;
      }
    </style>
  }
