@model eX_Portal.Models.AgriTraxManagement

@{
  ViewBag.Title = "Create Customer";
  Layout = "~/Views/Shared/_ADSB.cshtml";
  var InspectionOfficer = (IEnumerable<SelectListItem>)ViewData["InspectionOfficer"];
  var LoanOfficer = (IEnumerable<SelectListItem>)ViewData["LoanOfficer"];
}

<section class="top-space">
  <div class="column column-half">
    <div class="title-bar">New Customer</div>

    @using (Html.BeginForm(null, null, FormMethod.Post, new { name = "frmEdit", id = "frmEdit" })) {
      @Html.AntiForgeryToken()

      <div id="internal_scroll" class="internal-scroll">
        <div id="lblValidateSummary">
          @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
          @Html.LabelFor(model => model.CustomerReference, htmlAttributes: new { @class = "control-label col-md-2" })
          <div class="col-md-10">
            @Html.EditorFor(model => model.CustomerReference, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CustomerReference, "", new { @class = "text-danger" })
          </div>
        </div>

        <div class="form-group">
          @Html.LabelFor(model => model.AccountNumber, htmlAttributes: new { @class = "control-label col-md-2" })
          <div class="col-md-10">
            @Html.EditorFor(model => model.AccountNumber, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AccountNumber, "", new { @class = "text-danger" })
          </div>
        </div>

        <div class="form-group">
          @Html.LabelFor(model => model.DisburementDate, htmlAttributes: new { @class = "control-label col-md-2" })
          <div class="col-md-10">
            @Html.EditorFor(model => model.DisburementDate, new { htmlAttributes = new { @class = "form-control date-picker" } })
            @Html.ValidationMessageFor(model => model.DisburementDate, "", new { @class = "text-danger" })
          </div>
        </div>

        <div class="form-group">
          @Html.LabelFor(model => model.Tenor, htmlAttributes: new { @class = "control-label col-md-2" })
          <div class="col-md-10">
            @Html.EditorFor(model => model.Tenor, new { htmlAttributes = new { @class = "form-control" } }) Months
            @Html.ValidationMessageFor(model => model.Tenor, "", new { @class = "text-danger" })
          </div>
        </div>

        <div class="form-group">
          @Html.LabelFor(model => model.PrincipalAmount, htmlAttributes: new { @class = "control-label col-md-2" })
          <div class="col-md-10">
            @Html.EditorFor(model => model.PrincipalAmount, new { htmlAttributes = new { @class = "form-control", type = "number" } })
            @Html.ValidationMessageFor(model => model.PrincipalAmount, "", new { @class = "text-danger" })
          </div>
        </div>

        <div class="form-group">
          @Html.LabelFor(model => model.BranchID, htmlAttributes: new { @class = "control-label col-md-2" })
          <div class="col-md-10">
            @Html.EditorFor(model => model.BranchID, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.BranchID, "", new { @class = "text-danger" })
          </div>
        </div>

        <div class="form-group">
          @Html.LabelFor(model => model.LoanOfficer, htmlAttributes: new { @class = "control-label col-md-2" })
          <div class="col-md-10">
            @Html.DropDownListFor(m => m.LoanOfficer, LoanOfficer, "-- Select Oficer --")
            @Html.ValidationMessageFor(model => model.LoanOfficer, "", new { @class = "text-danger" })
          </div>
        </div>

        <div class="form-group">

          <label class="control-label col-md-2">Location</label>
          <div class="col-md-5">
            @Html.EditorFor(model => model.Lat, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Lat, "", new { @class = "text-danger" })
          </div>
          <div class="col-md-5">
            @Html.EditorFor(model => model.Lng, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Lng, "", new { @class = "text-danger" })
          </div>

        </div>

        <div class="form-group">
          @Html.LabelFor(model => model.LandAddress, htmlAttributes: new { @class = "control-label col-md-2" })
          <div class="col-md-10">
            @Html.EditorFor(model => model.LandAddress, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LandAddress, "", new { @class = "text-danger" })
          </div>
        </div>

        <div class="form-group">
          @Html.LabelFor(model => model.LandSize, htmlAttributes: new { @class = "control-label col-md-2" })
          <div class="col-md-10">
            @Html.EditorFor(model => model.LandSize, new { htmlAttributes = new { @class = "form-control", type = "number" } })
            @Html.ValidationMessageFor(model => model.LandSize, "", new { @class = "text-danger" })
          </div>
        </div>

        <div class="form-group">
          @Html.LabelFor(model => model.SiteVisitDate, htmlAttributes: new { @class = "control-label col-md-2" })
          <div class="col-md-10">
            @Html.EditorFor(model => model.SiteVisitDate, new { htmlAttributes = new { @class = "form-control date-picker" } })
            @Html.ValidationMessageFor(model => model.SiteVisitDate, "", new { @class = "text-danger" })
          </div>
        </div>

        <div class="form-group">
          @Html.LabelFor(model => model.NextSiteVisitDate, htmlAttributes: new { @class = "control-label col-md-2" })
          <div class="col-md-10">
            @Html.EditorFor(model => model.NextSiteVisitDate, new { htmlAttributes = new { @class = "form-control date-picker" } })
            @Html.ValidationMessageFor(model => model.NextSiteVisitDate, "", new { @class = "text-danger" })
          </div>
        </div>

        <div class="form-group">
          @Html.LabelFor(model => model.InspectionOfficer, htmlAttributes: new { @class = "control-label col-md-2" })
          <div class="col-md-10">
            @Html.DropDownListFor(m => m.InspectionOfficer, InspectionOfficer, "-- Select Oficer --")
            @Html.ValidationMessageFor(model => model.InspectionOfficer, "", new { @class = "text-danger" })
          </div>
        </div>

        <div class="form-group">
          @Html.LabelFor(model => model.InspectionNote, htmlAttributes: new { @class = "control-label col-md-2" })
          <div class="col-md-10">
            @Html.EditorFor(model => model.InspectionNote, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.InspectionNote, "", new { @class = "text-danger" })
          </div>
        </div>
      </div>

        <div class="form-group" >
          <div style="float:left" id="lblStatus"></div>
            <input style="float:right" type="submit" value="Continue..." formnovalidate="formnovalidate" class="btn btn-default" />
        </div>
        }

      </div>
  <div class="column column-half shaded">

    <div class="title-bar">Land Location</div>
    <div id="AgricultureMap" class="column-half"></div>

  </div>
</section>


@section scripts {
  <script type="text/javascript" src="//maps.google.com/maps/api/js?key=AIzaSyDY6IHXH4-fUAzYq6HBR_ndu_lnyyopcTs"></script>
  <script type="text/javascript" src="~/Scripts/AgricultureCommon.js"></script>
  <script type="text/javascript" src="~/Scripts/AgricultureCreate.js"></script>
}

@section header {
  <link href="~/Content/Agriculture.css" rel="stylesheet" />
  @Scripts.Render("~/bundles/jqueryval")
}