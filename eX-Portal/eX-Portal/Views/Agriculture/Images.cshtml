@model eX_Portal.Models.AgriTraxManagement

@{
  ViewBag.Title = $"Land Images - {Model.AccountNumber}" ;
  Layout = "~/Views/Shared/_ADSB.cshtml";
}

<section class="top-space">
  <div class="column column-half">
    <div class="title-bar">Upload Images 
      <span id="btnShowPoints" class="button" style="display:inline-block;">
      <a href="@Url.Action("Index")">Locations</a></span>    
    </div>

       <div class="form-group-row">
          @Html.LabelFor(model => model.CustomerReference, htmlAttributes: new { @class = "control-label col-md-2" })
          <div class="col-md-10">
            @Html.DisplayFor(model => model.CustomerReference, new { htmlAttributes = new { @class = "form-control" } })
          </div>
        </div>

        <div class="form-group-row">
          @Html.LabelFor(model => model.DisburementDate, htmlAttributes: new { @class = "control-label col-md-2" })
          <div class="col-md-10">
            @Html.DisplayFor(model => model.DisburementDate, new { htmlAttributes = new { @class = "form-control date-picker" } })
          </div>
        </div>


        <div class="form-group-row">
          @Html.LabelFor(model => model.PrincipalAmount, htmlAttributes: new { @class = "control-label col-md-2" })
          <div class="col-md-10">
            @Html.DisplayFor(model => model.PrincipalAmount, new { htmlAttributes = new { @class = "form-control", type = "number" } })
          </div>
        </div>

        <div class="form-group-row">
          @Html.LabelFor(model => model.BranchID, htmlAttributes: new { @class = "control-label col-md-2" })
          <div class="col-md-10">
            @Html.DisplayFor(model => model.BranchID, new { htmlAttributes = new { @class = "form-control" } })
          </div>
        </div>

        <div class="form-group-row">
          @Html.LabelFor(model => model.LoanOfficer, htmlAttributes: new { @class = "control-label col-md-2" })
          <div class="col-md-10">
            @Html.DisplayFor(m => m.LoanOfficer, new { htmlAttributes = new { @class = "form-control" } })
          </div>
        </div>

        <div class="form-group-row">

          <label class="control-label col-md-2">Location</label>
          <div class="col-md-10">
            @Html.DisplayFor(model => model.Lat, new { htmlAttributes = new { @class = "form-control" } })
            ,
            @Html.DisplayFor(model => model.Lng, new { htmlAttributes = new { @class = "form-control" } })
          </div>
        </div>

        <div class="form-group-row">
          @Html.LabelFor(model => model.LandAddress, htmlAttributes: new { @class = "control-label col-md-2" })
          <div class="col-md-10">
            @Html.DisplayFor(model => model.LandAddress, new { htmlAttributes = new { @class = "form-control" } })
          </div>
        </div>

        <div class="form-group-row">
          @Html.LabelFor(model => model.LandSize, htmlAttributes: new { @class = "control-label col-md-2" })
          <div class="col-md-10">
            @Html.DisplayFor(model => model.LandSize, new { htmlAttributes = new { @class = "form-control", type = "number" } })
          </div>
        </div>

        <div class="form-group-row">
          @Html.LabelFor(model => model.InspectionOfficer, htmlAttributes: new { @class = "control-label col-md-2" })
          <div class="col-md-10">
            @Html.DisplayFor(m => m.InspectionOfficer, new { htmlAttributes = new { @class = "form-control" } })
          </div>
        </div>

        <div class="form-group-row">
          @Html.LabelFor(model => model.InspectionNote, htmlAttributes: new { @class = "control-label col-md-2" })
          <div class="col-md-10">
            @Html.DisplayFor(model => model.InspectionNote, new { htmlAttributes = new { @class = "form-control" } })
          </div>
        </div>
      

    <div class="form-group-row">
      <form method="post" id="frmImages" name="frmImages">
        <input name="AgriImage" id="AgriImage" type="file" multiple/>
        <input style="float:right" name="btnImage" id="btnImage" type="submit" value="upload" />
      </form>
      </div>

    <ul id="FileQueue">
    </ul>
    <ul id="DataImageThumbnail"></ul>

    </div>
  <div class="column column-half shaded">
    <div class="title-bar">Land Location</div>
    <div id="AgricultureMap" class="column-half"></div>
  </div>
</section>


@section scripts {
  <script type="text/javascript">
    var AgriTraxID = @Model.AgriTraxID;
  </script>
  <script type="text/javascript" src="//maps.google.com/maps/api/js?key=AIzaSyDY6IHXH4-fUAzYq6HBR_ndu_lnyyopcTs"></script>
  <script type="text/javascript" src="~/Scripts/AgricultureCommon.js"></script>
  <script type="text/javascript" src="~/Scripts/AgricultureImages.js"></script>
}

@section header {
  <link href="~/Content/Agriculture.css" rel="stylesheet" />
  @Scripts.Render("~/bundles/jqueryval")
}