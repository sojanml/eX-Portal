@using eX_Portal.Models;
@using eX_Portal.exLogic;
@model List<DroneFlight>

@{
  Decimal RowID = -1;
  String RefID = "";
}

@Html.Action("DroneDetail", "Drone", new { ID = ViewBag.DroneID })

@using (Html.BeginForm(null, null, FormMethod.Post, new { name = "qEditForm", id = "qEditForm" }) ) {
  @Html.AntiForgeryToken()
  <input type="hidden" name="DroneID" value="@ViewBag.DroneID" />

  <ul id="log-rows">    
    @foreach (DroneFlight thisModel in Model) {
      RowID++;
      int ID = thisModel.ID;
      if(RowID == 0) {
        RefID = "[SLNO]";
      } else {
        RefID = "[" + RowID.ToString() + "]";
      }
      <li id="log-row-@thisModel.ID" style="display:@(RowID == 0 ? "none" : "block")">
        <input type="hidden" name="DroneFlight@(RefID).ID" value="@ID"/>
        @if(RowID == 0) { 
          <input type="hidden" name="DroneFlight.Index" value="SLNO" />
        } else {
          <input type="hidden" name="DroneFlight.Index" value="@RowID" />
        }
        <table class="report repeat-report">
          <thead>
            <tr>
              <th colspan="2">Log</th>
              <th colspan="2">Flying Information</th>
              <th colspan="2">Battery 1</th>
              <th colspan="2">Battery 2
              <div style="float: right"><span class="delete icon">&#xf057;</span></div>
              </th>
            </tr>
          </thead>
          <tr>
            <td>From:</td>
            <td><input id="LogFrom@(RefID)" name="DroneFlight@(RefID).LogFrom" type="text" value="@thisModel.LogFrom" /></td>
            <td>Take Off:</td>
            <td><input id="LogTakeOffTime@(RefID)" name="DroneFlight@(RefID).LogTakeOffTime" placeholder="00:00:00" type="text" value="@thisModel.LogTakeOffTime" /></td>
            <td>ID</td>
            <td><input id="LogBattery1ID@(RefID)" name="DroneFlight@(RefID).LogBattery1ID" type="text" value="@thisModel.LogBattery1ID" /></td>
            <td>ID</td>
            <td><input id="LogBattery2ID@(RefID)" name="DroneFlight@(RefID).LogBattery2ID" type="text" value="@thisModel.LogBattery2ID" /></td>
          </tr>
          <tr>
            <td>To:</td>
            <td><input id="LogTo@(RefID)" name="DroneFlight@(RefID).LogTo" type="text" value="@thisModel.LogTo" /></td>
            <td>Landing</td>
            <td><input id="LogLandingTime@(RefID)" name="DroneFlight@(RefID).LogLandingTime"  placeholder="00:00:00" type="text" value="@thisModel.LogLandingTime" /></td>
            <td>Start Volt</td>
            <td><input id="LogBattery1StartV@(RefID)" name="DroneFlight@(RefID).LogBattery1StartV" type="text" value="@thisModel.LogBattery1StartV" /></td>
            <td>Start Volt</td>
            <td><input id="LogBattery2StartV@(RefID)" name="DroneFlight@(RefID).LogBattery2StartV" type="text" value="@thisModel.LogBattery2StartV" /></td>
          </tr>
          <tr>
            <td>Date:</td>
            <td><input class="date-picker" id="FlightDate@(RefID)" name="DroneFlight@(RefID).FlightDate" type="text" value="@Util.fmtDt(thisModel.FlightDate.ToString(), false)" /></td>
            <td>Duration: </td>
            <td>@(thisModel.LogLandingTime - thisModel.LogTakeOffTime)</td>
            <td>End Volt</td>
            <td><input id="LogBattery1EndV@(RefID)" name="DroneFlight@(RefID).LogBattery1EndV" type="text" value="@thisModel.LogBattery1EndV" /></td>
            <td>End Volt</td>
            <td><input id="LogBattery2EndV@(RefID)" name="DroneFlight@(RefID).LogBattery2EndV" type="text" value="@thisModel.LogBattery2EndV" /></td>
          </tr>
        </table>
      </li>

    }
  </ul>

    <div class="form-toolbar">
      <div class="col-md-offset-2 col-md-10">
        <a class="button" id="add-new-entry" ><span style="color:#4cff00" class="icon">&#xf055;</span> Add new log entry</a>
        <input type="submit" value="Submit" class="btn btn-default" />
      </div>
    </div>
    <input type="hidden" name="RowID" value="@RowID" />
}

@section scripts {
  <script type="text/javascript">
    var RowID = @RowID;
    $(document).ready(function () {
      $('#add-new-entry').on("click", AddLog);
      if(RowID == 0) AddLog();
    });

    $(document).on("click", "span.delete", function() {
      $(this).closest("LI").remove();
    });


    $('body').on('focus',".date-picker", function(){
      $(this).datepicker();
    });

    function AddLog() {
      RowID++;
      document.forms['qEditForm']['RowID'].value = RowID;
      var HTML = $('#log-row-0').html();
      HTML = HTML.replace(/SLNO/g,RowID );
      HTML = HTML.replace(/hasDatepicker/g, '' );
      var nElem = $('<li></li>').html(HTML);
      $('#log-rows').append(nElem);
    }

  </script>
}


@section toolbar {
  <a class="button" href="@Url.Action("Manage", "Drone", new { ID = ViewBag.DroneID }) ">Manage</a>
}