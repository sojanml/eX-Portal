
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_ADSB.cshtml";
}

<section class="top-space">
  <div class="column column-half">

    <table style="width:100%;" class="" cellpadding="0" cellspacing="0">
      <tr>
        <td valign="top" class="shaded">
          <div class="title"><b>Tracking</b> (Select Receving Options)</div>
          <ul class="simple-list">
            <li><input class="query" checked value="1" type="checkbox" name="tracking_adsb_commercial" id="tracking_adsb_commercial" /><label for="tracking_adsb_commercial">ADSB Commercial</label> </li>
            <li><input class="query" checked value="1" type="checkbox" name="tracking_adsb_rpas" id="tracking_adsb_rpas" /><label for="tracking_adsb_rpas">ADSB RPAS</label></li>
            <li><input class="query" value="1" type="checkbox" name="tracking_adsb_skycommander" id="tracking_adsb_skycommander" /><label for="tracking_adsb_skycommander">Skycommander RPAS</label></li>
          </ul>
          <div class="hr"></div>
          <div class="title">
            <b>ATC Radius</b> <input class="spinner" type="text" id="ATCRadious" value="150" name="ATCRadious" /> KM
          </div>
          <ul class="multi-select">
            <li><input class="query" value="1" checked type="checkbox" name="adsb_omdb" id="adsb_omdb" /><label title="Dubai International Airport – Dubai" for="adsb_omdb">OMDB</label> </li>
            <li><input class="query" value="1" checked type="checkbox" name="adsb_omdw" id="adsb_omdw" /><label title="Al Maktoum International Airport – Dubai" for="adsb_omdw">OMDW</label></li>
            <li><input class="query" value="1" type="checkbox" name="adsb_omsj" id="adsb_omsj" /><label title="Sharjah International Airport – Sharjah" for="adsb_omsj">OMSJ</label></li>
          </ul>
        </td>
        <td class="spacer"></td>
        <td valign="top"  class="shaded">
          <div class="title"><b>Traffic STATS &amp; Analysis Dashoard</b>  (Input Parameters)</div>

          <table class="traffic_status" cellpadding="0" cellspacing="0">
            <tr>
              <td rowspan="2"><div class="safe traffic_stat"></div> </td>
              <td>Define Horizondal Seperation</td>
              <td><input id="hSafe" class="spinner" value="300" name="hSafe" type="text" /></td>
              <td>KM</td>
            </tr>
            <tr>
              <td>Define Vertical Seperation</td>
              <td><input id="vSafe" class="spinner" value="30" name="vSafe" type="text" /></td>
              <td>KM</td>
            </tr>
            <tr>
              <td rowspan="2"><div class="alert traffic_stat"></div></td>
              <td>Define Horizondal Seperation</td>
              <td><input id="hAlert" class="spinner" value="150" name="hAlert" type="text" /></td>
              <td>KM</td>
            </tr>
            <tr>
              <td>Define Vertical Seperation</td>
              <td><input id="vAlert" class="spinner" value="10" name="vAlert" type="text" /></td>
              <td>KM</td>
            </tr>
            <tr>
              <td rowspan="2"><div class="breach traffic_stat"></div></td>
              <td>Define Horizondal Seperation</td>
              <td><input id="hBreach" class="spinner" value="10" name="hBreach" type="text" /></td>
              <td>KM</td>
            </tr>
            <tr>
              <td>Define Vertical Seperation</td>
              <td><input id="vBreach" class="spinner" value="5" name="vBreach" type="text" /></td>
              <td>KM</td>
            </tr>
          </table>
        </td>
      </tr>
    </table>



    <table class="info-tiles top-space breach" cellpadding="0" cellspacing="0">
      <tr>
        <td class="breach" valign="top">
          <div class="tile">
            <div class="tile-title">Breach</div>
            <div class="tile-detail">
              <table cellpadding="0" cellspacing="0">
                <tr>
                  <td>
                    <div id="Breach-RPAS-Count" class="tile-number">0</div>
                    <div class="tile-caption">RPAS</div>
                  </td>
                  <td>
                    <div id="Breach-Aircraft-Count" class="tile-number">0</div>
                    <div class="tile-caption">Aircraft</div>
                  </td>
                </tr>
              </table>
            </div>
          </div>

        </td>
        <td>
          <div class="detail">
            <div class="scroll-table">
              <div class="row head">
                <div class="col1">EPOCH TIME</div>
                <div class="col2">MODE S</div>
                <div class="col3">LATITUDE</div>
                <div class="col4">LONGITUDE</div>
                <div class="col5">Speed</div>
                <div class="col6">HEADING</div>
              </div>

              <div id="WatchingFlights" class="scroll-rows">
                <div class="scroll-up"><span class="icon">&#xf0aa;</span></div>
                <div class="scroll-down"><span class="icon">&#xf0ab;</span></div>
                <div class="scroll" id="WatchingFlightsScroll">

                </div>
              </div>
            </div>
            <div class="breach-info">Red Alerts with Aircrafts <span class="breach-aircraft" id="Breach-Aircraft">-</span></div>
          </div>

        </td>
      </tr>


    </table>


    <table class="info-tiles top-space alert" cellpadding="0" cellspacing="0">
      <tr>
        <td>


          <div class="tile">
            <div class="tile-title">Alert</div>
            <div class="tile-detail">
              <table cellpadding="0" cellspacing="0">
                <tr>
                  <td>
                    <div id="Alert-RPAS-Count" class="tile-number">0</div>
                    <div class="tile-caption">RPAS</div>
                  </td>
                  <td>
                    <div id="Alert-Aircraft-Count" class="tile-number">0</div>
                    <div class="tile-caption">Aircraft</div>
                  </td>
                </tr>
              </table>
            </div>
          </div>
        </td>
        <td>
          <div class="detail_left">
            <div><b>Mode S Code</b></div>
            <div id="Alert-RPAS" class="alert-text">-</div>
          </div>
          <div class="detail_right">
            <div><b>Amber alert with Aircraft</b></div>
            <div id="Alert-Aircraft" class="alert-text">-</div>
          </div>
        </td>
      </tr>


    </table>

    <table class="info-tiles top-space safe" cellpadding="0" cellspacing="0">
      <tr>
        <td valign="top" class="safe">

          <div class="tile">
            <div class="tile-title">Safe Ops.</div>
            <div class="tile-detail">

              <div id="Safe-Aircraft-Count" class="tile-number">0</div>
              <div class="tile-caption">Aircraft</div>

            </div>
          </div>
        </td>
        <td class="shaded" valign="top">
          <div class="title"><b>Mode S Codes</b> (Operating Safe RPAS)</div>
          <div id="Safe-RPAS" style="padding-left:5px;" class="alert-text">-</div>
        </td>
        <td class="spacer"></td>
        <td class="shaded" valign="top">
          <div class="title"><b>Current Monitoring Stats</b></div>
          <table class="safe-status" cellpadding="0" cellspacing="0">
            <tr>
              <td>Broadcasting RPAS</td>
              <td><div class="label">19</div></td>
            </tr>
            <tr>
              <td>Geographical Range</td>
              <td><div class="label">585</div> SQ. KM&nbsp;</td>
            </tr>
            <tr>
              <td>Brech Alerts (24 H)</td>
              <td><div class="label">2</div></td>
            </tr>

          </table>
        </td>
      </tr>


    </table>



  </div>
        <div id="adsb_map" class="column column-half shaded"></div>
</section>


<section class="top-space">
  <div id="BarGraph"></div>
</section>
<p>&nbsp;</p>
@section scripts {
  <script src="http://code.highcharts.com/stock/highstock.js"></script>
  <script src="https://code.highcharts.com/modules/exporting.js"></script>
  <script type="text/javascript" src="//maps.google.com/maps/api/js?key=AIzaSyDY6IHXH4-fUAzYq6HBR_ndu_lnyyopcTs"></script>
  <script src="~/Scripts/ADSB.js" type="text/javascript"></script>
  <script src="~/Scripts/ADSBDashboard.js" type="text/javascript"></script>
}
  
