@{
  ViewBag.Title = "LIVE TRAFFIC";
  ViewBag.BaseClass = "RTA";
  Layout = "~/Views/Shared/_eXPortalWidget.cshtml";


}

<div class="grid-section flight-info">
  <div class="grid-2of8">
    <table>
      <tr>
        <th>Flight ID</th>
        <td>00322</td>
      </tr>
      <tr>
        <th>Flight Date</th>
        <td>18-Aug-2016 08:52:52</td>
      </tr>
      <tr>
        <th>RPAD ID</th>
        <td>EXME-DJI-9-001D</td>
      </tr>
    </table>

  </div>
  <div class="grid-3of8">
    <table>
      <tr>
        <th>Pilot</th>
        <td>ZIAD ZAFAR</td>
      </tr>
      <tr>
        <th>Ground Station</th>
        <td>IVAN BOBLOKIC</td>
      </tr>
      <tr>
        <th>Created By</th>
        <td>Exponent Technology Services</td>
      </tr>
    </table>

  </div>
  <div class="grid-3of8">
    <table class="warning">
      <tr class="yellow">
        <th><span class="icon">&#xf071;</span></th>
        <td>Traffic flow bellow amber</td>
      </tr>
      <tr class="red">
        <th><span class="icon">&#xf071;</span></th>
        <td>2 Possible Incidents in last 30 minutes</td>
      </tr>
    </table>
  </div>
</div>

<div class="grid-section map-video">
  <div class="grid-4of8"><div id="traffic_map">Loading Map...</div></div>
  <div class="grid-4of8"><div id="traffic_video">Loading Video...</div></div>
</div>

<div class="grid-section">
  <div class="grid-4of8"><div id="traffic_chart"></div></div>
  <div class="grid-4of8">
    <ul class="tiles">
      <li>
        <div class="tile-icon"><img src="~/images/rta/MinSpeed.png" /></div>
        <div class="tile-title">Min. Speed</div>
        <div id="tile-min-speed" class="tile-detail">0.0</div>
      </li>
      <li>
        <div class="tile-icon"><img src="~/images/rta/MedSpeed.png" /></div>
        <div class="tile-title">Med. Speed</div>
        <div id="tile-med-speed" class="tile-detail">0.0</div>
      </li>
      <li>
        <div class="tile-icon"><img src="~/images/rta/AvgSpeed.png" /></div>
        <div class="tile-title">Avg. Speed</div>
        <div id="tile-avg-speed" class="tile-detail">0.0</div>
      </li>
      <li>
        <div class="tile-icon"><img src="~/images/rta/MaxSpeed.png" /></div>
        <div class="tile-title">Max. Speed</div>
        <div id="tile-max-speed" class="tile-detail">0.0</div>
      </li>
    </ul>

  </div>
</div>

<div class="grid-section">
  <div class="grid-4of8  traffic_data">

    <table id="traffic_data" cellpadding="0" cellspacing="0">
      <thead>
        <tr>
          <th>READ TIME</th>
          <th>ZONE</th>
          <th>MIN. SPEED</th>
          <th>MED. SPEED</th>
          <th>AVG. SPEED</th>
          <th>MAX. SPEED</th>
          <th>VECHILE COUNT</th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>
  </div>
  <div class="grid-4of8">

    <ul class="tiles">
      <li>
        <div class="tile-icon"><img src="~/images/rta/zone.png" /></div>
        <div class="tile-title">Zone</div>
        <div class="tile-detail">DIC</div>
      </li>
      <li>
        <div class="tile-icon"><img src="~/images/rta/VechileCount.png" /></div>
        <div class="tile-title">Veh. Count</div>
        <div id="tile-vechile-count" class="tile-detail">0</div>
      </li>
      <li>
        <div class="tile-icon"><img src="~/images/rta/Heading.png" /></div>
        <div class="tile-title">Heading</div>
        <div class="tile-detail">D94-N</div>
      </li>
      <li>
        <div class="tile-icon"><img src="~/images/rta/RpasID.png" /></div>
        <div class="tile-title">RPAS ID</div>
        <div class="tile-detail">RTA1</div>
      </li>
    </ul>

  </div>
</div>

@section scripts {
  <script src="~/jwplayer/jwplayer.js" type="text/javascript"></script>
  <script src="http://code.highcharts.com/stock/highstock.js"></script>
  <script src="https://code.highcharts.com/modules/exporting.js"></script>
  <script type="text/javascript" src="//maps.google.com/maps/api/js?key=AIzaSyDY6IHXH4-fUAzYq6HBR_ndu_lnyyopcTs"></script>
  <script src="~/Scripts/TrafficControlLive.js" type="text/javascript"></script>
}